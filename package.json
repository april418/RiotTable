{
  "name": "RiotTable",
  "version": "0.1.0",
  "description": "Riot.js table example",
  "main": "app/bin/server/js/index.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node app/bin/server/js/index.js & npm run watch",
    "poststart": "",
    "stop": "",
    "restart": "npm stop && npm start",
    "build": "npm-run-all --parallel build:*",
    "build:tags": "browserify app/client/coffee/index.coffee > app/bin/client/js/index.js",
    "build:pug": "pug --pretty --no-debug --out app/bin/client/html/ app/client/pug/",
    "build:sass": "node-sass --output app/bin/client/css/ app/client/sass/",
    "build:coffee-common": "coffee --output app/bin/common/js/ app/common/coffee/",
    "build:coffee-server": "coffee --output app/bin/server/js/ app/server/coffee/",
    "watch": "npm-run-all --parallel watch:*",
    "watch:tags": "watch 'npm run build:tags' app/client/tags/ app/common/coffee/ app/client/coffee/",
    "watch:pug": "watch 'npm run build:pug' app/client/pug/",
    "watch:sass": "watch 'npm run build:sass' app/client/sass/",
    "watch:coffee-common": "watch 'npm run build:coffee-common' app/common/coffee/",
    "watch:coffee-server": "watch 'npm run build:coffee-server' app/server/coffee/"
  },
  "repository": "https://github.com/april418/RiotTable.git",
  "author": "april_418",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.1.1",
    "coffee-script": "^1.12.0",
    "coffeeify": "^2.0.1",
    "materialize-css": "^0.97.8",
    "node-sass": "^3.13.0",
    "pug": "^2.0.0-beta6",
    "riot": "^3.0.2",
    "riotify": "^2.0.0"
  },
  "browserify": {
    "transform": [
      [
        "riotify",
        {
          "type": "coffeescript",
          "expr": true,
          "template": "pug"
        }
      ],
      [
        "coffeeify"
      ]
    ]
  }
}
